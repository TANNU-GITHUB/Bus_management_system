<%- include('partials/header') %>

<div class="login-container">
  <div class="form-container">
    <h1 class="text-center mb-4">Register for My Bus </h1>

    <div class="card shadow">
      <div class="card-body p-5">
        
        <!-- Makes POST request to /register route -->
        <form action="/register" method="POST">
          <div class="form-group mb-4">
            <label for="user" class="form-label">Username</label>
            <input type="text" class="form-control" name="username" required placeholder="Enter your username">
          </div>
          <div class="form-group mb-4">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" name="email" required placeholder="Enter your email">
          </div>
          <div class="form-group mb-4">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" name="password" required placeholder="Enter your password">
          </div>
          <div class="form-group mb-4">
            <label for="contact" class="form-label">Contact</label>
            <input type="text" class="form-control" name="contact" required placeholder="Enter your contact number">
          </div>
          <button type="submit" class="btn btn-primary btn-block mt-3">Register</button>
        </form>

        <!-- Optional: Login prompt -->
        <div class="mt-4 text-center">
          <p>Already have an account? <a href="/login" class="register-link">Login here</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

<style>
  /* Reuse styles from login page */
  .login-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    background: linear-gradient(135deg, #4CAF50, #2e7d32);
  }

  .form-container {
    width: 100%;
    max-width: 400px;
    padding: 2em;
  }

  .card {
    border: none;
    border-radius: 8px;
  }

  .card-body {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
  }

  .form-control {
    border-radius: 6px;
    height: 45px;
  }

  .form-label {
    font-weight: 600;
    color: #333;
  }

  .btn-primary {
    background-color: #4CAF50;
    border: none;
    border-radius: 6px;
    height: 45px;
    font-size: 1rem;
    transition: background-color 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #388E3C;
  }

  .register-link {
    color: #4CAF50;
    font-weight: 600;
    text-decoration: none;
  }

  .register-link:hover {
    text-decoration: underline;
  }

  .shadow {
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }
</style>
