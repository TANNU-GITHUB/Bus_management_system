<%- include('partials/header') %>

<div class="login-container">
  <div class="form-container">
    <h1 class="text-center mb-4">My Bus Login</h1>

    <div class="card shadow">
      <div class="card-body p-5">
        
        <!-- Makes POST request to /login route -->
        <form action="/login" method="POST">
          <div class="form-group mb-4">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" name="username" required placeholder="Enter your email">
          </div>
          <div class="form-group mb-4">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" name="password" required placeholder="Enter your password">
          </div>
          <button type="submit" class="btn btn-primary btn-block mt-3">Login</button>
        </form>

        <!-- Optional: Sign up prompt -->
        <div class="mt-4 text-center">
          <p>Donâ€™t have an account? <a href="/register" class="register-link">Register here</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

<style>
  /* Main login page container styling */
  .login-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    background: linear-gradient(135deg, #4CAF50, #2e7d32);
  }

  .form-container {
    width: 100%;
    max-width: 400px;
    padding: 2em;
  }

  /* Card and form elements */
  .card {
    border: none;
    border-radius: 8px;
  }

  .card-body {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
  }

  /* Form input styling */
  .form-control {
    border-radius: 6px;
    height: 45px;
  }

  .form-label {
    font-weight: 600;
    color: #333;
  }

  /* Button styling */
  .btn-primary {
    background-color: #4CAF50;
    border: none;
    border-radius: 6px;
    height: 45px;
    font-size: 1rem;
    transition: background-color 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #388E3C;
  }

  /* Link styling */
  .register-link {
    color: #4CAF50;
    font-weight: 600;
    text-decoration: none;
  }

  .register-link:hover {
    text-decoration: underline;
  }

  /* Optional shadow for card */
  .shadow {
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }
</style>
